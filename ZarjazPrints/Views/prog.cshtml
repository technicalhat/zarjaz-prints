@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<ZarjazPrints.ViewModels.ProgViewModel>
@{
    Layout = "Layout.cshtml";
    var Prog = Model.ProgInfo;
}
@helper FilterUrl(string field, string value) { 
@(string.Format("/progs?filter={0}:{1}", HttpUtility.UrlEncode(field), HttpUtility.UrlEncode(value)))
}
<div class="row">
    <div class="col-lg-12">
        <h1>Prog @Prog.Prog <small>@Prog.FullDate (@Prog.Price)</small></h1>
        
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <img class="progcover" src="http://localhost:8080/@Prog.ImageFile" />
    </div>
    <div class="col-lg-4">
        <div class="panel panel-default">

            <div class="panel-heading">Prog @Prog.Prog</div>
            <ul class="list-group">
                <li class="list-group-item">Cover date : @Prog.FullDate</li>
                <li class="list-group-item">Cover : <a href='@FilterUrl("cover", Prog.Cover)'>@Prog.Cover</a></li>
                <li class="list-group-item">Artist : <a href='@FilterUrl("artist", Prog.Artist)'>@Prog.Artist</a></li>
                <li class="list-group-item">Size : 
                    <select>
                        <option>A4 Canvas</option>
                        <option>A3 Canvas</option>
                        <option>A2 Canvas</option>
                        <option>A4 Framed</option>
                        <option>A3 Framed</option>
                        <option>A2 Framed</option>
                    </select>
                </li>
                <li class="list-group-item">Price : £X.XX</li>
                <li class="list-group-item">
                    <button class="btn btn-primary">Buy now!</button>
