@model ZarjazPrints2020.Models.Response.SingleProgViewModel

@{
    var prog = Model.Prog;
}
<div class="row">
    <div class="col-lg-12">
        <h1>Prog @prog.Prog <small>
    @prog.FullDate
        @if (!String.IsNullOrWhiteSpace(prog.Price))
        {
            <text>(@prog.Price)</text>
        }
    </small></h1>

    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <img class="progcover" src="@Url.Action("Cover", "Image", new { progId = prog.Prog })" />
    </div>
    <div class="col-lg-4">
        <div class="panel panel-default">

            <div class="panel-heading">Prog @prog.Prog</div>
            <ul class="list-group">
                <li class="list-group-item">Cover date : @prog.FullDate</li>
                <li class="list-group-item">Cover : <a href='@Url.Action("CoverList", "Cover", new { prog.Cover })'>@prog.Cover</a></li>
                <li class="list-group-item">Artist : <a href='@Url.Action("CoverList", "Cover", new { prog.Artist })'>@prog.Artist</a></li>
                <li class="list-group-item">
                    Size :
                    <select>
                        <option>A4 Canvas</option>
                        <option>A3 Canvas</option>
                        <option>A2 Canvas</option>
                        <option>A4 Framed</option>
                        <option>A3 Framed</option>
                        <option>A2 Framed</option>
                    </select>
                </li>
                <li class="list-group-item">Price : <span id="selectedPrice">£X.XX</span></li>
                <li class="list-group-item">
                    <button class="btn btn-primary">Buy now!</button>
                </li>
            </ul>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                Other progs
            </div>
            <div class="row">

                @foreach (int progId in Enumerable.Range(0, 6))
                {
                    <div class="col-lg-6">
                        <a class="thumbnail" href="@Url.Action("SingleProg", "Cover", new { progId })">
                            <h4>Prog @progId</h4>
                            <img  src="@Url.Action("Thumbnail", "Image", new { progId = progId })" />
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>